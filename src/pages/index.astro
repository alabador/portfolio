---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
import Header from '../components/Header.astro';
---

<Layout title="Austin Labador - Full-Stack Developer">
	<body>
		<Header />
		<main>
			<h2 class="main-title" id="projects">Projects</h2>
			<section class="link-card-grid">
				<Card 
					title="WeWatch" 
					href="https://github.com/alabador/wewatch"
					image="/img/wewatch.jpeg"
					body="WeWatch helps you track all your favorite anime, using your own individual profile."
					tech={["Node.js", "Express.js", "MongoDB", "EJS", "Passport.js Auth"]}
				/>
				<Card 
					title="Nutrifax" 
					href="https://github.com/alabador/nutrifax"
					image="/img/nutrifax.png"
					body="A nutrition and food info web app."
					tech={["React.js", "TypeScript", "Chart.js", "ChakraUI"]}
				/>
				<Card 
					title="Solitude" 
					href="https://github.com/alabador/solitude"
					image="/img/solitude.png"
					body="A web app for the Solitude guild in the MMORPG, Wynncraft."
					tech={["Next.js", "TypeScript", "TailwindCSS", "DaisyUI"]}
				/>
			</section>
		</main>
	</body>
</Layout>

