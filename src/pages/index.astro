---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
import Header from '../components/Header.astro';
---

<Layout title="Austin Labador - Full-Stack Developer">
	<body>
		<Header />
		<main>
			<h2 class="main-title">Projects</h2>
			<section class="link-card-grid">
				<Card 
					title="WeWatch" 
					href="https://github.com/alabador/wewatch"
					image="/img/wewatch.jpeg"
					body="WeWatch helps you track all your favorite anime, using your own individual profile."
					tech={["Node.js", "Express.js", "MongoDB", "EJS", "Passport.js Auth"]}
				/>
				<Card 
					title="Nutrifax" 
					href="https://github.com/alabador/nutrifax"
					image="/img/nutrifax.png"
					body="A nutrition and food info web app."
					tech={["React.js", "TypeScript", "Chart.js", "ChakraUI"]}
				/>
				<Card 
					title="Teyvat Tracker" 
					href="https://github.com/alabador/teyvat-tracker"
					image="/img/teyvat-tracker.png"
					body="A video game news, info, and resource site based around the popular video game Genshin Impact."
					tech={["React.js", "JavaScript", "TailwindCSS", "Python"]}
				/>
				<Card 
					title="Goatchinanggo Landing Page" 
					href="https://github.com/alabador/goatchinanggo"
					image="/img/goatchinanggo.png"
					body="A responsive landing page created for Goatchinaggo, a restaurant based in Cebu."
					tech={["Astro", "TypeScript", "CSS"]}
				/>
			</section>
		</main>
	</body>
</Layout>

<style>
	body {
		display: grid;
	}
	main {
		width: 100%;
		padding: 2rem;
		
	}
	.main-title {
		color: var(--headline);
		display: flex;
		align-items: center;
	}
	.main-title::after {
        content: '';
        flex: 1;
        margin-left: 1rem;
        height: 1px;
        background-color: var(--tertiary);
    }
	.link-card-grid {
		display: grid;
		gap: 1rem;
		padding: 0;
		width: 100%;
	}
	@media screen and (min-width: 1200px) {
		body {
			grid-template-columns: 35% 65%;
		}
	}
</style>
