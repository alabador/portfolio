---
import '../styles/global.css'
import Tech from './Tech.astro';
---

<section class="tech-stack-container">
    <h2 class="stack-title">Tech Stack</h2>
    <div class="tech-stack">
        <Tech tech="JavaScript" icon="fa-brands fa-js" />
        <Tech tech="TypeScript" icon="fa-solid fa-keyboard" />
        <Tech tech="React.js" icon="fa-brands fa-react" />
        <Tech tech="Node.js" icon="fa-brands fa-node" />
        <Tech tech="MongoDB" icon="fa-solid fa-database" />
        <Tech tech="Tailwind/SASS \n (CSS)" icon="fa-brands fa-css3-alt" />
    </div>
</section>

<style>
    .tech-stack {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
    }
    .stack-title {
        display: flex;
        align-items: center;
    }
    .stack-title:after {
        content: '';
        flex: 1;
        margin-left: 1rem;
        height: 1px;
        background-color: var(--tertiary);
    }
</style>