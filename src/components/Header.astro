---
import '../styles/global.css'
import Layout from '../layouts/Layout.astro'
import logo from '/img/austin-labador-high-resolution-logo-black-on-transparent-background.svg'
import Hero from '../components/Hero.astro';
import TechStack from './TechStack.astro';

---
<section class="header-container">
    <header>
        <a class="header-logo" href="/"><img src={logo} alt="website logo"></a>
        <nav class="nav">
            <ul class="nav-links">
                <li class="nav-link"><a href="/#projects" id="projects-link">Projects</a></li>
                <li class="nav-link"><a href="/design/#design" id="design-link">Design</a></li>
                <li class="nav-link" ><a href="/about/#about" id="about-link">About</a></li>
                <li class="nav-link"><a href="https://www.linkedin.com/in/austinlabador/" id="resume-link" target="_blank">Resume</a></li>
            </ul>
        </nav>
    </header>
    <Hero />
    <TechStack />
</section>


<style>
    .header-container {
        background-color: var(--background);
        padding: 2rem;
    }
    header {
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
        gap: 1rem;
        padding-bottom: 1.5rem;
        margin-bottom: 1.5rem;
        width: 100%;
    }
    .header-logo, .nav-links a {
        text-decoration: none;
    }
    .nav-link a{
        color: var(--paragraph);
        font-size: 1.1rem;
        font-weight: 500;
    }
    .nav-link a::before {
        content:'/';
        font-weight:300;
        padding-right: 0.2rem; 
    }
    .header-logo img {
        width: 250px;
        margin-top: 1rem;
    }
    .nav-links {
        display: flex;
        gap: 1rem;
    }
    .nav-link a:hover {
        color: var(--highlight)
    }
    @media screen and (min-width: 800px) {
        header {
            flex-direction: row;
            justify-content: space-between;
        }
    }
    @media screen and (min-width: 1200px) {
        header {
            flex-direction: column;
            justify-content: center;
            align-items: flex-start;
        }
        .header-container {

        }
    }


</style>

<script>
    const currentPage:string = window.location.pathname;
    const mainContent = document.querySelector('.main-title');

    if(currentPage === '/'){
        document.querySelector('#projects-link')?.setAttribute("style", "color: #ff8e3c")

    } else if (currentPage === '/design/') {
        document.querySelector('#design-link')?.setAttribute("style", "color: #ff8e3c")
        // if (window.innerWidth < 1200) {
        //     mainContent?.scrollIntoView({behavior: 'smooth'});
        // }
    } else if (currentPage === '/about/') {
        document.querySelector('#about-link')?.setAttribute("style", "color: #ff8e3c")
        // if (window.innerWidth < 1200) {
        //     mainContent?.scrollIntoView({behavior: 'smooth'});
        // }
    }
</script>