---
import '../styles/global.css'
import Layout from '../layouts/Layout.astro'
import logo from '/img/austin-labador-high-resolution-logo-black-on-transparent-background.svg'
---

<header>
    <a class="header-logo" href="#"><img src={logo} alt="website logo"></a>
    <nav class="nav">
        <ul class="nav-links">
            <li><a href="#">Projects</a></li>
            <li><a href="#">Design</a></li>
            <li><a href="#">About</a></li>
            <li><a class="resume-link" href="#">Resume</a></li>
        </ul>
    </nav>
</header>

<style>
    header {
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
        gap: 1rem;
        padding-bottom: 1.5rem;
        margin-bottom: 1.5rem;
    }
    .header-logo, .nav-links a {
        text-decoration: none;
        color: var(--paragraph)
    }
    .header-logo img {
        width: 250px;
    }
    .nav-links {
        display: flex;
        gap: 1rem;
    }
    @media screen and (min-width: 800px) {
        header {
            flex-direction: row;
            justify-content: space-between;
        }
    }


</style>